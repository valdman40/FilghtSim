            <TextBlock Grid.Row="2" VerticalAlignment="Center" TextAlignment="Center" Text="def2"/>
            <TextBlock Grid.Row="3" VerticalAlignment="Center" TextAlignment="Center" Text="def3"/>
            <TextBlock Grid.Row="4" VerticalAlignment="Center" TextAlignment="Center" Text="def4"/>
            <TextBlock Grid.Row="5" VerticalAlignment="Center" TextAlignment="Center" Text="def5"/>
            <TextBlock Grid.Row="6" VerticalAlignment="Center" TextAlignment="Center" Text="def6"/>
            <TextBlock Grid.Row="7" VerticalAlignment="Center" TextAlignment="Center" Text="def7"/>
        </Grid>
    </Border>
</UserControl>
